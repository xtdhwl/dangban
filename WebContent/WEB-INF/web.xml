<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>ShenruWeb</display-name>

	<!-- 初始化页面 -->
	<servlet>
		<servlet-name>ApplicationContent</servlet-name>
		<servlet-class>net.shenru.ShenruApplicationContent</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ApplicationContent</servlet-name>
		<url-pattern>/ifisjdfoisdkfsldfnoweifwioencoiwejoiwruoiweurifoiewioh</url-pattern>
	</servlet-mapping>
	<!-- 日志action：aud【增，删，改】 -->
	<servlet>
		<servlet-name>NoteAction</servlet-name>
		<servlet-class>net.shenru.note.NoteAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoteAction</servlet-name>
		<url-pattern>/NoteAction</url-pattern>
	</servlet-mapping>
	<!-- 日志详情 -->
	<servlet>
		<servlet-name>NotePageServlet</servlet-name>
		<servlet-class>net.shenru.note.NotePageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotePageServlet</servlet-name>
		<url-pattern>/note</url-pattern>
		<url-pattern>/note.html</url-pattern>
	</servlet-mapping>
	<!-- 日志编辑  -->
	<servlet>
		<servlet-name>NoteEditPageServlet</servlet-name>
		<servlet-class>net.shenru.note.NoteEditPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoteEditPageServlet</servlet-name>
		<url-pattern>/noteedit</url-pattern>
		<url-pattern>/noteedit.html</url-pattern>
	</servlet-mapping>
	<!-- 日志列表 -->
	<servlet>
		<servlet-name>NoteListPageServlet</servlet-name>
		<servlet-class>net.shenru.note.NoteListPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoteListPageServlet</servlet-name>
		<url-pattern>/notelist.html</url-pattern>
		<url-pattern>/notelist</url-pattern>
	</servlet-mapping>
	<!-- 消息页面 -->
	<servlet>
		<servlet-name>MessageServlet</servlet-name>
		<servlet-class>net.shenru.MessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MessageServlet</servlet-name>
		<url-pattern>/message.html</url-pattern>
		<url-pattern>/message</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>